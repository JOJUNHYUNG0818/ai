package javaBasic.ch04.sec01;
import java.util.Scanner;



public class Switch문 {
	Scanner sc = new Scanner(System.in);
	public static void main(String[] args) {
		
		System.out.println("A B C 중 입력");
		
		swit();
		
		exIf();
	}

	public static void swit() 
	{
		Scanner sc = new Scanner(System.in);
		String eng = sc.next(); 
		switch(eng)
		{
		case "A": System.out.println("Apple");
			break;
		case "B": System.out.println("Bear");
			break;
		case "C": System.out.println("Cat");
			break;
		default :
		{
			System.out.println("A B C 중 입력하시오");
			swit();
		}
		
		}		
		
	}
	
	public static void exIf()
	{
		Scanner sc = new Scanner(System.in);
		
		System.out.println("100 10 1 중 입력");
		int number = sc.nextInt();
		
		if(number == 100)
		{
			System.out.println("백의자리");
		}
		else if(number == 10)
		{
			System.out.println("십의자리");
		}
		else if(number == 1)
		{
			System.out.println("일의자리");
		}
		else
		{
			System.out.println("다시 100 10 1 중 입력해주세요");
			exIf();
		}
	}
	
}

