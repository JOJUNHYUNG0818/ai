package javaBasic.ch04.sec01;

public class for¹® {

	public static void main(String[] args) {
		
		//exFor2();
		//exFor3();
		//exFor4();
		exFor5();
	}

	
	public static void exFor2()
	{
		for(int i=1, j=10; i<=10 || j<=19; i++,j++)
		{
			System.out.println(i+" "+j);
		}
	}
	
	public static void exFor3()
	{
		for(int i=1, j=100, k= 200; i<100 || j<=200 || k<=300 ; i++,j++,k++)
		{
			System.out.println(i+" "+j+" "+k);
		}
	}
	
	public static void exFor4()
	{
		for (int i=1; i<10; i++)
		{
			System.out.println(i);
			
			for(int j=i; j<i+2; j++)
			{
				System.out.print(j+" ");
			}
			System.out.println("\n");
		}
	}
	
	public static void exFor5()
	{
		for (int i=10; i<15; i++)
		{
			System.out.println(i);
			
			for(int j=i; j>i-3; j--)
			{
				System.out.print(j+" ");
			}
			System.out.println("\n");
		}
	}
}

