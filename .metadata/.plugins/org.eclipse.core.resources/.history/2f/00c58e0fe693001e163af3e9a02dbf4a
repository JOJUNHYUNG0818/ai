package javaBasic.ch04.sec01;
import java.util.Scanner;

public class 확인문제4장 {

	public static void main(String[] args) {
		// oneHund();
		//oneHundThree();
		//exStar();

		ex7();
	}
	
	public static void oneHund()
	{
		for(int i=1; i<=100; i++)
		{
			System.out.println(i);
		}
	}
	
	public static void oneHundThree()
	{
		int sum=0;
		for(int i=1; i<=100; i++)
		{
			if(i%3==0)
			{
				sum +=i;
			}
		}
		System.out.println(sum);
	}
	public static void exStar()
	{
		for(int i = 1; i<=5; i++)
		{
			for(int j = 1; j<=i; j++)
			{
				System.out.print("*");
			}
			System.out.println();
		}
	}
	
	public static void ex7()
	{
		Scanner sc = new Scanner(System.in);
		int savingSum=0;
		int balance =0;
		System.out.println("------------------");
		System.out.println("1.예금| 2.출금| 3.잔고| 4.종료");
		System.out.println("------------------");
		System.out.println("선택: ");
		String meun = sc.next();		
		
		while(!meun.equals("4"))
		{
			
			switch(meun) 
			{
			case "1" : 
			{
				System.out.println("입금하실 예금: ");
				int saving = sc.nextInt();
				savingSum+=saving;
			}
			case "2" :
			{
				System.out.println("출금하실 금액: ");
				int withdraw = sc.nextInt();
				savingSum-=withdraw;
				System.out.println("출금하시고 남은 금액 : "+ savingSum);
			}
			case "3" :
			{
				System.out.println("잔고: "+savingSum);
			}
			case "4" :
			{
				System.out.println("종료");
			}
				
			}
		}
	}

}



